extends ../layout/index

block contenido
  .py-10 
    h1(class="text-4xl my-10 font-extrabold text-center") Bienes
     span(class="font-normal") Raices
     h2(class="text-center text-2xl font-extrabold")=pagina
     if errores 
       div(class="max-w-md mx-auto my-10")
         each error in errores
           p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")=error.msg

     .mt-8.mx-auto.max-w-md
       .bg-white.py-8.px-4.shadow
          form(class="space-y-5" method="POST" action="/auth/olvide-password" novalidate)
           input(type="hidden" name="_csrf" value=csrfToken)
         
           div 
             label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email
             input#email(class="w-full px-3 py-2 border border-gray-300 rounder-md placeholder-gray-400" placeholder="Tu email" type="email" name="email")
          
           div(class="flex items-center justify-between") 
              a(class="text-gray-500 text-xs" href="/auth/registro") ¿No tienes cuenta? Registrate
              a(class="text-gray-500 text-xs" href="/auth/login") ¿Ya tienes cuenta? Inicia sesion
           input(type="submit" value="enviar instrucciones" class="w-full bg-indigo-600 hover:bg-indigo-700  text-white font-bold py-3 cursor-pointer")